<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.breeze.mapper.NewsCategoryMapper">

    <sql id="Base_Column_List">
        id,`name`
    </sql>

    <select id="findAll" resultType="com.breeze.pojo.NewsCategory" >
        SELECT <include refid="Base_Column_List"/>
         FROM news_category;
    </select>

    <insert id="insert" parameterType="com.breeze.pojo.NewsCategory">
        INSERT INTO news_category(id , `name`) VALUES (#{id} , #{name});
    </insert>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM news_category WHERE id = #{id};
    </delete>
    
    <update id="update" parameterType="com.breeze.pojo.NewsCategory">
        UPDATE news_category SET `name` = #{name} WHERE id = #{id};
    </update>

</mapper>