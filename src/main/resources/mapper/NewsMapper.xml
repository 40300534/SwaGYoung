<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.breeze.mapper.NewsMapper">

    <sql id="Base_Column_List">
        id,title,content,image,news_category_id,create_time
    </sql>

    <select id="findById" resultType="com.breeze.pojo.News" parameterType="java.lang.Long">
        SELECT <include refid="Base_Column_List"/>
        FROM news WHERE id = #{id}
    </select>

    <select id="findAll" resultType="com.breeze.pojo.News">
        SELECT <include refid="Base_Column_List"/>
         FROM news;
    </select>

    <select id="findByCategoryId" resultType="com.breeze.pojo.News" parameterType="java.lang.Long">
        SELECT <include refid="Base_Column_List"/>
         FROM news
         WHERE news_category_id = #{categoryId};
    </select>

    <insert id="add" parameterType="com.breeze.pojo.News">
        INSERT INTO news(title , content , image , news_category_id , create_time) VALUES (#{title} , #{content} , #{image} , #{newsCategoryId} , #{createTime} );
    </insert>

    <update id="update" parameterType="com.breeze.pojo.News">
        UPDATE news SET title = #{title} , content = #{content} , image = #{image} , news_category_id = #{newsCategoryId} , create_time = #{createTime} WHERE id = #{id};
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM news WHERE id = #{id};
    </delete>


</mapper>